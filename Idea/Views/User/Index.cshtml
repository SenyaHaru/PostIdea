@model IEnumerable<Idea.Models.ApplicationUser>

@{
    ViewData["Title"] = "User Index";
}
<style>
    .table-user {
        background-color: #add8e6;
        color: #333333;
        border-color: #333333;
    }

    .column-highlight {
        background-color: #333333;
    }
</style>
<div class="text-center mt-4 mb-3">
    <a class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">Create New</a>
</div>

<table class="table table-bordered border-primary table-user">
    <tr>
        <th>Username</th>
        <th>Action</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">
                    @Html.DisplayFor(modelItem => item.UserName)
                </a>
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm rounded-0">
                    <span class='material-icons fs-6'>remove</span>
                </a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm rounded-0">
                    <span class="material-icons fs-6">edit</span>
                </a>
                <a asp-action="AddRole" asp-route-id="@item.Id" class="btn btn-primary btn-sm rounded-0">
                    <span class="material-icons fs-6">people_alt</span>
                </a>
            </td>
        </tr>
    }
</table>